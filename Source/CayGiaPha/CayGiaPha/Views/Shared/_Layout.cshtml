@using CayGiaPha.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cây Gia Phả</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo.bootstrap-v4.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @*<script src="~/assets/jquery-3.3.1.min.js"></script>*@
    <script src="~/assets/Library/jquery.min.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:darkred;">
        <div class="container">
            <div class="navbar-header">
                <img src="~/assets/imgs/cen_bn.jpg" style="height:50px;" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
                    
                    @if (CurrentContext.IsLogged() == true)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false" style="color:hotpink">
                                <i class="fa fa-user" aria-hidden="true"></i>@CurrentContext.GetCurUser().Username
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Profile", "Account")" style="color:hotpink">
                                        <i class="fa fa-address-book-o" aria-hidden="true"></i>
                                        Setting
                                    </a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a id="logoutLink" href="javascript:;" style="color:hotpink">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                        Log out
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a id="logoutLink" href="@Url.Action("Login","Account")" style="color:hotpink">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                Đăng nhập
                            </a>
                        </li>
                        <li>
                            <a id="logoutLink" href="@Url.Action("Register","Account")" style="color:hotpink">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                Đăng ký
                            </a>
                        </li>
                    }
                </ul>
                <form id="frmLogout" method="post" action="@Url.Action("Logout","Account")"></form>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript">
        $('#logoutLink').on('click', function () {
            $('#frmLogout').submit();
        })
    </script>
    @RenderSection("js", false)
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="~/assets/CGP.js"></script>*@
</body>
</html>