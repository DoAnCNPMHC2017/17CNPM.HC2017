@using CayGiaPha.Models
@model List<Tree>
@{
    ViewBag.Title = "Index";
}
@*<link href="~/assets/bootstrap/bootstrap.min.css" rel="stylesheet" />*@
<script src="~/assets/bootstrap/bootstrap.min.js"></script>

<script src="~/assets/Library/jquery.min.js"></script>
<script src="~/assets/Library/kendo.all.min.js"></script>
<script src="~/assets/CGP.js"></script>
<style>
    .create-jumbotron {
        background-repeat: no-repeat; 
        background-position: center;
        background-image: url(assets/imgs/dragon.png);
        background-color: #fff5cc;
    }
    .list-jumbotron {
        background-repeat: no-repeat; 
        background-position: center;
        background-image: url(assets/imgs/1.jpg);
        background-color: #fffffd;
    }
</style>
<form class="form-horizontal" method="post" action="" id="form_register">
    <div class="container">
        <div class="jumbotron text-center create-jumbotron">
            <input style="background-color: #FFF8DC" type="text" class="text-center" id="txtName" name="Name" placeholder="Tên cây gia tộc" value="" /><br /><br />
            <div class="center-block">
                <button id="singlebutton" name="singlebutton" class="btn btn-primary center-block">Tạo mới</button>
                @*<button type="submit" class="btn btn-success" name="create" id="create">
                        <i class="fa fa-check"></i>
                        Tạo mới
                    </button>*@
            </div>
        </div>
        <div class="jumbotron list-jumbotron">
            <h1 class="text-center">Danh sách gia tộc</h1>
            @{
                int stt = 1;
            }
            <div class="card-content table-responsive">
                <table class="table">
                    <thead class="text-primary">
                        <tr>
                            <th>STT</th>
                            <th>Tên Cây</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var cim in Model)
                        {                    
                            <tr>
                                <th>@stt</th>
                                <td>@cim.Name</td>
                                <td>@cim.CreateDate.ToString()</td>
                                <td><a href="/CGP/CreateCGP/?id=@cim.TreeID">Chi tiết</a></td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>


            </div>
                @*<div id="GridTree">

            </div>*@
            </div>
    </div>
</form>
