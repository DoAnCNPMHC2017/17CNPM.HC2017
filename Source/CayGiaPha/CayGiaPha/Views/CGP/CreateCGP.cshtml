<script type="text/javascript">
    $('input[name="Gender"]').change(function () {

        var check = $('input[name="Gender"]:checked').val();
        if (check == "male") {
            $('#sex').val("M");
        }
        else {
            $('#sex').val("F");
        }
    });
    //Show dialog quê quán
    $("#dialogBirthPlace").dialog({
        modal: true,
        autoOpen: false,
        title: "Thêm quê quán",
        width: 500,
        height: 300
    });
    $("#btnBirthPlace").click(function () {
        $('#dialogBirthPlace').dialog('open');
    });
    //Show dialog nghề nghiệp
    $("#dialogJob").dialog({
        modal: true,
        autoOpen: false,
        title: "Thêm nghề nghiệp",
        width: 500,
        height: 300
    });
    $("#btnJob").click(function () {
        $('#dialogJob').dialog('open');
    });
    //Show dialog nơi ở
    $("#dialogAddress").dialog({
        modal: true,
        autoOpen: false,
        title: "Thêm nơi ở",
        width: 500,
        height: 300
    });
    $("#btnAddress").click(function () {
        $('#dialogAddress').dialog('open');
    });
    //Show dialog nơi mất
    $("#dialogDiePlace").dialog({
        modal: true,
        autoOpen: false,
        title: "Thêm nơi mất",
        width: 500,
        height: 300
    });
    $("#btnDiePlace").click(function () {
        $('#dialogDiePlace').dialog('open');
    });
    //Show dialog nguyên nhân chết
    $("#dialogCauseOfDeath").dialog({
        modal: true,
        autoOpen: false,
        title: "Thêm nguyên nhân chết",
        width: 500,
        height: 300
    });
    $("#btnCauseOfDeath").click(function () {
        $('#dialogCauseOfDeath').dialog('open');
    });
</script>

